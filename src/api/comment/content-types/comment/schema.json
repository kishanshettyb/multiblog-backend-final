{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "comment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true
    },
    "comment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ],
      "required": true,
      "default": "pending"
    },
    "created_date": {
      "type": "datetime"
    },
    "parent_comment_id": {
      "type": "biginteger",
      "required": false
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "post": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::post.post"
    }
  }
}
